<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(news_item) -%>">
  <span class='title'>
    <%= news_item.title << ' ' << I18n.l(news_item.news_datetime, locale: :ru, format: :long) %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.news_news_item_path(news_item), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_news_admin_news_item_path(news_item), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.news_admin_news_item_path(news_item), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: I18n.l(news_item.news_datetime, locale: :ru, format: :long))}}  ) %>
  </span>
</li>
