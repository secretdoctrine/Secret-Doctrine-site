<%= form_for [refinery, :news_admin, @setting] do |f| -%>
    <div class='field news_supp_field' style="margin-bottom: 20px;">
      <%= f.label :default_interval_in_months, style: 'display: inline-block;' -%>
      <%= f.number_field :default_interval_in_months -%>
      <%= f.submit %>
    </div>
<% end -%>
<section id='records'>
  <%= render 'records' %>
</section>
<aside id='actions'>
  <%= render 'actions' %>
</aside>
<%= render '/refinery/admin/make_sortable', options: {tree: false} if !searching? and ::Refinery::News::Admin::NewsItemsController.sortable? and ::Refinery::News::NewsItem.many? %>
