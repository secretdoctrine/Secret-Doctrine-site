<% content_for :body_content_title do %>
  <%= @news_item.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Body</h1>
    <p>
      <%=raw @news_item.body %>
    </p>
  </section>
  <section>
    <h1>Library News</h1>
    <p>
      <%=raw @news_item.library_news %>
    </p>
  </section>
  <section>
    <h1>Site News</h1>
    <p>
      <%=raw @news_item.site_news %>
    </p>
  </section>
  <section>
    <h1>News Datetime</h1>
    <p>
      <%=raw @news_item.news_datetime %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="news_items">
      <% @news_items.each do |news_item| %>
        <li>
          <%= link_to news_item.title, refinery.news_items_news_item_path(news_item) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
