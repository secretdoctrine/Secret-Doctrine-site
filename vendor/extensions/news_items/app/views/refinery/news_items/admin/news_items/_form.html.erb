<%= form_for [refinery, :news_items_admin, @news_item] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @news_item,
              :include_object_name => true %>

    <div class='field'>
      <%= f.label :title -%>
      <%= f.text_field :title, :class => 'larger widest' -%>
    </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:body],
                :object => "news_items/news_item" -%>
  </div>

  <div class='field'>
    <%= f.label :library_news -%>
    <%= f.check_box :library_news, :checked => @news_item[:library_news] -%>
  </div>

  <div class='field'>
    <%= f.label :site_news -%>
    <%= f.check_box :site_news, :checked => @news_item[:site_news] -%>
  </div>

  <div class='field'>
    <%= f.label :news_datetime -%>
    <%= f.datetime_select :news_datetime, start_year: 1990 -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.news_items.admin.news_items.news_item'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete') -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
