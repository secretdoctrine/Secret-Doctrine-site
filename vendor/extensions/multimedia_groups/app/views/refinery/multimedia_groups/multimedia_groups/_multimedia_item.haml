%li
  - if item.video_link.blank?
    %span{:style => 'width:16px; height: 16px; display: block; float: right;'}
  - else
    = link_to 'Смотреть видео', item.video_link, :class => 'youtube_i', :onclick => '"return hs.htmlExpand(this, {objectType: \'iframe\', width: 560, height: 315, allowSizeReduction: false, wrapperClassName: \'draggable-header no-footer\', preserveContent: false, objectLoadTime: \'after\'})"'
  - if item.book_link.blank?
    %span{:style => 'width:16px; height: 16px; display: block; float: right;'}
  - else
    = link_to 'Читать', item.book_link, :class => 'read_i', :target => '_blank'

  - if item.audio_file
    = link_to 'Скачать', item.audio_file.url, :class => 'save_i', :target => '_blank'
    = link_to '#', :onclick => "play_file('#{item.audio_file.url}', '#{item.title}');".html_safe do
      = item.title
  - else
    = link_to '#' do
      = item.title