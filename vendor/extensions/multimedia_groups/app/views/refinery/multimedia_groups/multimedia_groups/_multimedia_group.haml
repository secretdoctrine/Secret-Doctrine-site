- if multimedia_group.multimedia_items.any? or multimedia_group.multimedia_groups.any?

  %div.maincontent
    %div.content
      %article.bodycontent
        %h2{align: "center"}
          %strong
            %span{style: "font-size: 18pt;"}
              = multimedia_group.title
        %p
          &nbsp;
        %p
          &nbsp;
        %p
          = render :partial => 'player'

        %section#audio_albums.albums
          - if multimedia_group.multimedia_items.any?
            %article.album
              %h2
                &nbsp;
              %ul{:class => :list}
                = render :partial => 'multimedia_item', :collection => multimedia_group.multimedia_items, :as => :item
          - if multimedia_group.multimedia_groups.any?
            = render :partial => 'multimedia_group_small', :collection => multimedia_group.multimedia_groups, :as => :multimedia_group





