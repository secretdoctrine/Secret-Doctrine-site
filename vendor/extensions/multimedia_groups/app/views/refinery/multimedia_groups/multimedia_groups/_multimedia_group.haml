- if multimedia_group.multimedia_items.any? or multimedia_group.multimedia_groups.any?

  %div.maincontent
    %div.content
      %article.bodycontent
        %h2{align: "center"}
          %strong
            %span{style: "font-size: 18pt;"}
              - if multimedia_group.extended_name.to_s.empty?
                = multimedia_group.title
              - else
                = raw multimedia_group.extended_name
        %p
          &nbsp;


        %section#audio_albums.albums
          - if multimedia_group.multimedia_items.any?
            :javascript
              var playlist_#{multimedia_group.id} = #{multimedia_group.make_playlist.html_safe};
            %article.album
              %h2
                &nbsp;
              %ul{:class => :list}
                = render :partial => 'multimedia_item', :locals => {playlist_name: "playlist_#{multimedia_group.id}"}, :collection => multimedia_group.ordered_items, :as => :item
          - if multimedia_group.multimedia_groups.any?
            = render :partial => 'multimedia_group_small', :collection => multimedia_group.ordered_groups, :as => :multimedia_group
          %ins.last_line





