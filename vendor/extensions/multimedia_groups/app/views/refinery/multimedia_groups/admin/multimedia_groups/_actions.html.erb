<ul>
  <% if ::Refinery::MultimediaGroups::Admin::MultimediaGroupsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.multimedia_groups_admin_multimedia_groups_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_multimedia_groups_admin_multimedia_group_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::MultimediaGroups::Admin::MultimediaGroupsController.sortable? && ::Refinery::MultimediaGroups::MultimediaGroup.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.multimedia_groups_admin_multimedia_groups_path,
                     t('.reorder', what:  "Multimedia Groups"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.multimedia_groups_admin_multimedia_groups_path,
                      t('.reorder_done', what: "Multimedia Groups"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
