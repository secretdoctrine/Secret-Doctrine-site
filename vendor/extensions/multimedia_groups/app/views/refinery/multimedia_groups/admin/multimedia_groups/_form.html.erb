<%= form_for [refinery, :multimedia_groups_admin, @multimedia_group] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @multimedia_group,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class="field">
    <%= f.label :multimedia_group -%>
    <% groups = @multimedia_groups.select{|x| x.id != @multimedia_group.id} -%>
    <% groups_for_select = [['(no group)', nil]] + groups.collect { |d| [d.title, d.id] } -%>
    <%= f.select(:multimedia_group_id, options_for_select(groups_for_select, @multimedia_group.multimedia_group_id))%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.multimedia_groups.admin.multimedia_groups.multimedia_group'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @multimedia_group.title) -%>
<% end -%>
