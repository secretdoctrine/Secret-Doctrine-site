<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(multimedia_item) -%>">
  <span class='title'>
    <%= multimedia_item.title %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.multimedia_groups_multimedia_item_path(multimedia_item), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_multimedia_groups_admin_multimedia_item_path(multimedia_item), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.multimedia_groups_admin_multimedia_item_path(multimedia_item), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: multimedia_item.title)}}  ) %>
  </span>
</li>
