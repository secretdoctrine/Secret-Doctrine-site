<ul>
  <% if ::Refinery::MultimediaGroups::Admin::MultimediaItemsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.multimedia_groups_admin_multimedia_items_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_multimedia_groups_admin_multimedia_item_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::MultimediaGroups::Admin::MultimediaItemsController.sortable? && ::Refinery::MultimediaGroups::MultimediaItem.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.multimedia_groups_admin_multimedia_items_path,
                     t('.reorder', what:  "Multimedia Items"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.multimedia_groups_admin_multimedia_items_path,
                      t('.reorder_done', what: "Multimedia Items"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
