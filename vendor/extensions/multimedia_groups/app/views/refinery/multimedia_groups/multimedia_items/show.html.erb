<% content_for :body_content_title do %>
  <%= @multimedia_item.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Audio File</h1>
    <p>
      <% if @multimedia_item.audio_file.present? %>
        <%= link_to 'audio_file', @multimedia_item.audio_file.url %>
      <% else %>
        audio_file
      <% end %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @multimedia_item.title %>
    </p>
  </section>
  <section>
    <h1>Video Link</h1>
    <p>
      <%=raw @multimedia_item.video_link %>
    </p>
  </section>
  <section>
    <h1>Book Link</h1>
    <p>
      <%=raw @multimedia_item.book_link %>
    </p>
  </section>
  <section>
    <h1>Multimedia Group</h1>
    <p>
      <%=raw @multimedia_item.multimedia_group_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="multimedia_items">
      <% @multimedia_items.each do |multimedia_item| %>
        <li>
          <%= link_to multimedia_item.title, refinery.multimedia_groups_multimedia_item_path(multimedia_item) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
