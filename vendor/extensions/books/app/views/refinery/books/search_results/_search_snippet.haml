%div{class: 'snippet_result'}
  = render partial: 'search_page_link', locals: {page_counter: page_counter, page: page}
  = link_to refinery.export_books_book_page_path(page.book.id, page.url_name), class: 'but_24' do
    %span.s0
      %span.s1
        %span.s2
          = I18n.t('library.search_page.export_page')
  %br
  = page.excerpts.page_text.gsub(/[^[[:alnum:]][[:blank:]][[:punct:]]<>+=]/, '').html_safe