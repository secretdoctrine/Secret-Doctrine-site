- node_class = 'jstree-open'
- node_class += ' book_category_add'
- node_class += ' book_category_edit' unless book_category.is_root
%li{:id => book_category.id,
    :edit_path => refinery.edit_books_admin_book_category_path(book_category.id),
    :class => node_class,
    :update_path => refinery.books_admin_book_category_path(book_category.id)}
  = book_category.name
  - if book_category.book_categories.any?
    %ul
      = render :partial => 'book_category_tree_element', :collection => book_category.book_categories.sort_by{|x| x.order_number}, :as => :book_category
