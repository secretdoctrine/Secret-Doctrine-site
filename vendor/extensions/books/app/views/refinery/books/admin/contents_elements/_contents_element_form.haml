= form_for [refinery, :books_admin, contents_element], :remote => true do |f|
  = f.hidden_field :book_id, {:value => contents_element.book_id}
  = raw '&nbsp;'*4*contents_element.get_nest_level
  = f.select :ce_type, options_for_select(contents_element.array_for_select, contents_element.ce_type)
  = f.text_field :name
  = f.number_field :page_number
  = f.submit

  - unless contents_element.id.nil?
    = link_to ::I18n.t('contents_elements.delete'),
              refinery.books_admin_contents_element_path(contents_element.id),
              method: :delete,
              remote: true,
              data: { confirm: ::I18n.t('contents_elements.delete_confirm') }

