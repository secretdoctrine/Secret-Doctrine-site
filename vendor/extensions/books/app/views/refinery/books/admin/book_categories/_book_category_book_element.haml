- node_class = 'jstree-open'
- node_class += ' jstree-edit'
- node_class += ' jstree-destroy'
%li{:id => 'book_' + book.id.to_s,
    :edit_path => refinery.edit_books_admin_book_path(book.id),
    :class => node_class,
    :update_path => refinery.books_admin_book_path(book.id),
    :destroy_path => refinery.books_admin_book_path(book.id),
    :node_type => :book}
  = link_to refinery.edit_books_admin_book_path(book.id) do
    - unless book.tree_prefix.blank?
      = book.tree_prefix
    = book.short_name