<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(book) -%>">
  <span class='title'>
    <%= book.name %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.books_book_path(book), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_books_admin_book_path(book), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.books_admin_book_path(book), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: book.name)}}  ) %>
  </span>
</li>
