%html
  %head

    %meta{:@content_item => "text/html; charset=windows-1251", "http-equiv" => "Content-Type"}/
    - title = 'Тайная Доктрина Востока в творчестве Ларисы Дмитриевой'
    - if @page_title
      - title += ' - ' + @page_title
    %title #{title}
    = stylesheet_link_tag 'refinery/books/application.css'
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}

  = javascript_include_tag 'refinery/books/application'
  - csrf_meta_tags

  %body{:class => @body_class + ' library'}
    #header
      =image_tag 'refinery/books/Header_Slava2.jpg', {:title => 'Н. К. Рерих. Слава Гималаев'}
      =image_tag 'refinery/books/Header_Slava_right2.gif', {:alt => 'Тайная Доктрина Востока в творчестве Ларисы Дмитриевой', :class => :right}
    = Refinery::Pages::MenuPresenter.new(refinery_menu_pages, self).to_html
    = yield
    = javascript_include_tag 'refinery/books/lightbox'