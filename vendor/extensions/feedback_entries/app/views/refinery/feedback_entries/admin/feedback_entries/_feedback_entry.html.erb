<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(feedback_entry) -%>">
  <span class='title'>
    <%= feedback_entry.poster_name %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.feedback_entries_feedback_entry_path(feedback_entry), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_feedback_entries_admin_feedback_entry_path(feedback_entry), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.feedback_entries_admin_feedback_entry_path(feedback_entry), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: feedback_entry.poster_name)}}  ) %>
  </span>
</li>
