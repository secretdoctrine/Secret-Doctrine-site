= stylesheet_link_tag 'feedback.css'

%div.clear

- if flash.notice
  %div.flash_notice
    %div
      = flash.notice
- if flash.alert
  - flash.alert.each_key do |key|
    - next if flash.alert[key].nil? or flash.alert[key].empty?
    %div.flash_alert
      %div
        - if key == :base
          = flash.alert[key].first
        - else
          = I18n.t('feedback.alert_prefix') + I18n.t("feedback.#{key}") + I18n.t('feedback.alert_suffix') + flash.alert[key].first


= render 'form'

%div.footer_feedback
  &nbsp;