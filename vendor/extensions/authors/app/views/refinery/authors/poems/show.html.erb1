<% content_for :body_content_title do %>
  <%= @poem.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Order</h1>
    <p>
      <%=raw @poem.order %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @poem.content %>
    </p>
  </section>
  <section>
    <h1>Short Content</h1>
    <p>
      <%=raw @poem.short_content %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @poem.picture, nil %>
    </p>
  </section>
  <section>
    <h1>Author</h1>
    <p>
      <%=raw @poem.author_id %>
    </p>
  </section>
<% end %>


<%= render '/refinery/content_page' %>
