<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(poem) -%>">
  <span class='title'>
    <%= poem.title %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.authors_poem_path(poem), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_authors_admin_poem_path(poem), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.authors_admin_poem_path(poem), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: poem.title)}}  ) %>
  </span>
</li>
