<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(author) -%>">
  <span class='title'>
    <%= author.name %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.authors_author_path(author), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_authors_admin_author_path(author), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.authors_admin_author_path(author), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: author.name)}}  ) %>
  </span>
</li>
