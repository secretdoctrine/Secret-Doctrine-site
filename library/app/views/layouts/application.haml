                = image_tag 'induism_ic.gif', {:height => 52, :width => 56}
              %td
                = image_tag 'buddism_ic.gif', {:height => 52, :width => 53}
              %td
                = image_tag 'krest_ic.gif', {:height => 52, :width => 33}
              %td
                = image_tag 'islam_ic.gif', {:height => 52, :width => 51}
              %td
                = image_tag 'iudei_ic.gif', {:height => 52, :width => 55}
              %td
                = image_tag 'zoroastrism_ic.gif', {:height => 52, :width => 39}
