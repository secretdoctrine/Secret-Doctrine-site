    = stylesheet_link_tag 'index.css'
    = stylesheet_link_tag 'mainmenu.css'
    = stylesheet_link_tag 'header.css'
    = stylesheet_link_tag 'application.css'
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
